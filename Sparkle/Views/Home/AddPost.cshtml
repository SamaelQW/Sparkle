@model Sparkle.Domain.Entities.Post

@{
    ViewData["Title"] = "AddPost";
}

<h1>AddPost</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPost">
