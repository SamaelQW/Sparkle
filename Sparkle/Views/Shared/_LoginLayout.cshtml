<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_LoginLayout</title>
    <link href="~/css/login.css" rel="stylesheet" asp-append-version="true"/>
</head>
<body>
    <div class="container">
        <header class="header">
            <div class="header__logo logo">
                <a asp-controller="Home" asp-action="Index"><img class="logo__img" src="~/img/logo.png" /></a>
            </div>
            <div class="header__title title">
                Sparkle
            </div>
        </header>
        <div class="content">
            @RenderBody()
        </div>
    </div>

</body>
</html>
