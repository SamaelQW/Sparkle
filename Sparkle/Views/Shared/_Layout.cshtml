<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sparkle</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css" type="text/css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <header class="header">
            <div class="header__logo logo">
                <a asp-controller="Home" asp-action="Index"><img class="logo__img" src="~/img/logo.png" /></a>
            </div>
            <div class="header__search search">
                <form>
                    <input type="text" name="searchText" class="search__box search_border_none" />
                    <input type="button" id="search-btn" class="search__button search_border_none" value="Search" />
                </form>
            </div>

            @if (User.Identity.IsAuthenticated)
            {
                <div class="header__sign-out sign-out">
                    <a class="sign-out__button" asp-controller="Account" asp-action="Logout">Sing out</a>
                </div>
            }

        </header>
        <nav class="nav">
            <a asp-action="Profile" asp-controller="Home" class="nav__link">My page</a>
            <a asp-action="Index" asp-controller="Home" class="nav__link">News</a>
            <a asp-action="Friends" asp-controller="Friend" class="nav__link">Friends</a>
        </nav>
        <div class="content">
            @RenderBody()
        </div>
        <footer class="footer">
            &copy; @DateTime.Now.Year
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
