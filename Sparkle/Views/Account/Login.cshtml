@model  LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "../Shared/_LoginLayout";
}

<form class="login-form" asp-action="Login" asp-controller="Account">
    <div class="form-group">
        @Html.LabelFor(m => m.UserName)
        @Html.EditorFor(m=>m.UserName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password)
        @Html.EditorFor(m=>m.Password)
    </div>
    
    <input class="login__button" type="submit" value="Login" asp-action="Login" asp-controller="Account" />
    <a class="register__button" asp-action="Register" asp-controller="Account">Register</a>
</form>

    
